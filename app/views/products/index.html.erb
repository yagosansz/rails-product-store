<% if flash[:notice] %>
	<div class="alert alert-success" role="alert">
		<%= flash[:notice] %>
	</div>
<% end %>

<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<td>Name</td>
			<td>Description</td>
			<td>Department</td>
			<td>Price</td>
			<td>Quantity</td>
			<td colspan="2"></td>
		</tr>
	</thead>
	<tbody>
		<%= render partial: "product", collection: @products %>
	</tbody>
</table>
