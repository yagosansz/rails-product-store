<% @product.errors.full_messages.each do |msg| %>
	<div class="alert alert-danger" role="alert">
		<%= msg %>
	</div>
<% end %>

<%= form_for @product do |form| %>
	<div class="row">
		<div class="col-sm-8">
			<div class="form-group">
				<%= form.label :name %>
				<%= form.text_field :name, class:"form-control" %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-8">
			<div class="form-group">
				<%= form.label :description %>
				<%= form.text_area :description, class:"form-control", rows: 4 %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-3">
			<div class="form-group">
				<%= form.label :department %>
				<%= form.collection_select :department_id, @departments, :id, :name, { prompt: true }, class:"form-control" %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-2">
			<div class="form-group">
				<%= form.label :price %>
				<%= form.number_field :price, class:"form-control", step: 0.01 %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-2">
			<div class="form-group">
				<%= form.label :quantity %>
				<%= form.number_field :quantity, class:"form-control" %>
			</div>
		</div>
	</div>
	<%= form.submit action_placeholder, class: "btn btn-primary"%>
<% end %>
