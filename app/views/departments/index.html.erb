<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= link_to "Show Products", department, class: "btn btn-primary" %></td>
        <td><%= link_to "Edit", edit_department_path(department), class: "btn btn-warning" %></td>
        <td><%= link_to "Delete", department, method: :delete, data: { confirm: "Are you sure you want to delete the #{department.name} department?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Create New Department", new_department_path, class: "btn btn-success" %>
